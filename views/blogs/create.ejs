<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <%- include("../../partials/head.ejs")%>

  <body>
    <%- include("../../partials/nav.ejs")%>
    <h1>create blog</h1>
    <form
      class="create-blog"
      style="display: flexbox"
      action="/create"
      method="POST"
    >
      <div>
        <label for="title">Blog title</label>
        <input type="text" name="title" id="title" class="field" />
      </div>
      <div>
        <label for="snippet">snippet</label>
        <textarea
          name="snippet"
          id="snippet"
          style="width: 400px"
          class="field"
        ></textarea>
      </div>
      <div>
        <label for="body">body</label>
        <textarea
          name="body"
          id="body"
          style="width: 400px"
          class="field"
        ></textarea>
      </div>
      <div>
        <button type="submit">submit</button>
      </div>
    </form>
  </body>
</html>
